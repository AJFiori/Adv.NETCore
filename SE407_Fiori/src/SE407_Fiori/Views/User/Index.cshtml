@model SE407_Fiori.UserViewModel
@{
    ViewData["Title"] = "User";
}

@if (TempData["ResultMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">
        @TempData["ResultMessage"]
    </p>
}
<br />
<div class="text-center">Welcome to the Users Page!</div>
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "User", FormMethod.Post))
            {
                <div class="formText two-col">
                    <div class="col1">
                        <!--First Name-->
                        <div class="form-group">
                            <label>First Name:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.FirstName,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.FirstName"
                                  class="text-danger"></span>
                        </div>
                        <!--Last Name-->
                        <div class="form-group">
                            <label>Last Name:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.LastName,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.LastName"
                                  class="text-danger"></span>
                        </div>
                        <!--Email-->
                        <div class="form-group">
                            <label>Email:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.Email,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.Email"
                                  class="text-danger"></span>
                        </div>
                        <!--Password-->
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.Password,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.Password"
                                  class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Submit Button-->
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-info btn-medium" />
                    </div>
            }
        </div>
    </div><!-- END OF EMPLOYEE INPUT FORM ROW -->
    <!-- Displays Employee Table From DB -->
    <h2>List of users</h2>
    <div class="tableMargin">
        <div class="row">
            <div class="table-responsive">
                <table class="table table-striped table-condensed table-bordered tableSizeSM">
                    <tr>
                        <th>User ID:</th>
                        <th>User First Name:</th>
                        <th>User Last Name:</th>
                        <th>User Email:</th>
                        <th>User Password:</th>
                        <th>Update:</th>
                        <th>Delete:</th>
                    </tr>

                    @foreach (var user in Model.UserList)
                    {
                        <tr>
                            <td>@user.UserID</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Password</td>
                            <td><a asp-action="Edit" asp-route-id="@user.UserID">Update</a></td>
                            <td><a asp-action="Delete" asp-route-id="@user.UserID" onclick='return confirm("Are your sure?");'>Delete</a></td>
                        </tr>
                    }
                </table>
            </div><!-- END OF TABLE RESPONSIVE-->
        </div><!--END OF SECOND ROW-->
    </div><!-- END OF TABLE MARGIN-->
</div><!-- END OF CONTAINER-FLUID-->
