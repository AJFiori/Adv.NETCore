@model SE407_Fiori.UserViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Edit", "User", FormMethod.Post))
            {
                <div class="formText two-col">
                    <div class="col1">
                        <!--First Name-->
                        <div class="form-group">
                            <label>First Name:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.FirstName,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.FirstName"
                                  class="text-danger"></span>
                        </div>
                        <!--Last Name-->
                        <div class="form-group">
                            <label>Last Name:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.LastName,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.LastName"
                                  class="text-danger"></span>
                        </div>
                        <!--Email-->
                        <div class="form-group">
                            <label>Email:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.Email,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.Email"
                                  class="text-danger"></span>
                        </div>
                        <!--Password-->
                        <div class="form-group">
                            <label>Password:</label>
                            @Html.TextBoxFor(Model => Model.NewUser.Password,
                                    new { @class = "form-control" })
                            <span asp-validation-for="@Model.NewUser.Password"
                                  class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!--Submit Button-->
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-info btn-medium" />
                    <div class="btn btn-lg">
                        @Html.ActionLink("Back to Users", "Index")
                    </div>
                </div>
            }
        </div>
    </div><!-- END OF EMPLOYEE INPUT FORM ROW -->
</div>